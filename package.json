{
  "name": "payment-app",
  "version": "1.0.0",
  "description": "Payment application",
  "main": "./src/server.ts",
  "scripts": {
    "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-tsc\" \"npm run watch-node\"",
    "start": "NODE_ENV=production npx ts-node src/server.ts",
    "start-prod": "pm2-runtime ./dist/server.js --env production",
    "start-prod2": "npm run build && node ./dist/server.js --env production",
    "start-dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node-dev' src/server.ts",
    "start2": "NODE_ENV=production npx ts-node src/server.ts",
    "build": "tsc",
    "tsc": "tsc",
    "watch-node": "nodemon ./dist/server.js",
    "watch-tsc": "tsc -w",
    "prettier": "prettier --list-different './src/**/*.ts'",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Alex Koufatzis",
  "license": "Apache-2.0",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@types/glob": "^7.1.3",
    "awilix": "^4.2.6",
    "aws-sdk": "^2.715.0",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.0",
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "dotenv": "^4.0.0",
    "express": "^4.17.1",
    "express-useragent": "^1.0.13",
    "geoip-lite": "^1.4.0",
    "ip": "^1.1.5",
    "joi": "^14.3.1",
    "json2csv": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.1",
    "mongoose": "^5.6.5",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "ts-node": "^8.10.2",
    "underscore": "^1.9.2",
    "uuid": "^3.4.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
